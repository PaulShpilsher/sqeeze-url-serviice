{  
    "compileOnSave": false,
    "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "lib": ["esnext"],
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": ".",
      "strict": true,
      "allowJs": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "./node_modules",
      "./src/**/*.spec.*"
    ]
  }